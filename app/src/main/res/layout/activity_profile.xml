<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ScrollView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/im_account"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/online_shopping">

            </com.airbnb.lottie.LottieAnimationView>

            <Button
                android:id="@+id/acc_signin"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="20dp"
                android:text="Sign In"
                android:onClick="tologInPage"
                android:textSize="16dp"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/acc_create_acc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/acc_signin"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Create Account"
                android:onClick="toCreateAcount"
                android:textSize="16dp"
                android:textAllCaps="false"/>

            <LinearLayout
                android:id="@+id/ll_profile1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/im_account"
                android:orientation="vertical">

                <LinearLayout
                    android:onClick="getOrderList"
                    android:id="@+id/ll_profile2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acc_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:paddingTop="15dp"
                        android:text="\t\t My Orders"
                        android:textColor="#253746"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/acc_app1"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:text="\n\t\t Manage your orders here\n\t\t Check order status | view previous orders."
                            android:textColor="#374e63"
                            android:textSize="12dp"></TextView>

                        <ImageView

                            android:id="@+id/acc_im_right_app"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:paddingBottom="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:onClick="getwhatsapp"
                    android:id="@+id/ll_profile3"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acc_appp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:paddingTop="15dp"
                        android:text="\t\t Contact Admin"
                        android:textColor="#253746"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/acc_app11"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:text="\n\t\t Contact Admin if you are facing problem \n\t\t reguarding to your order."
                            android:textColor="#374e63"
                            android:textSize="12dp"></TextView>

                        <ImageView
                            android:id="@+id/acc_im_right_appp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/wa" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile4"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acc_apppp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:paddingTop="15dp"
                        android:text="\t\t About"
                        android:textColor="#253746"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/acc_app111"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:text="\n\t\t About Dhule Mall\n\t\t information | Current version."
                            android:textColor="#374e63"
                            android:textSize="12dp"></TextView>

                        <ImageView
                            android:id="@+id/acc_im_right_apppp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#ffffff"
                            android:paddingBottom="30dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Button

                android:id="@+id/button2"
                android:onClick="logOutUser"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ll_profile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="LogOut" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>