<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPannel">

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/AdminLogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableRight="@drawable/logout_user"
        android:background="@android:color/transparent"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:textSize="13sp"
        android:onClick="logOutButton"
        android:text="LogOut" />

    <LinearLayout
        android:layout_below="@+id/AdminLogOutButton"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:drawableLeft="@drawable/list_category"
            android:text="View Orders" />

        <Button
            android:id="@+id/button5"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_categoryy"
            android:onClick="addRemoveCategory"
            android:text="Add / Remove Category" />

        <Button
            android:id="@+id/button4"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toAddNewProduct"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:text="Add Product" />

        <Button
            android:id="@+id/button6"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toRemoveProduct"
            android:drawableLeft="@drawable/ic_baseline_remove_24"
            android:text="Remove Product" />

        <Button
            android:id="@+id/button7"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_update_24"
            android:text="Update Product info" />
    </LinearLayout>

</RelativeLayout>