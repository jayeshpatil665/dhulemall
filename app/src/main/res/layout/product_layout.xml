<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/product_image"
            android:src="@drawable/ic_user"
            android:layout_width="150dp"
            android:layout_height="180dp"/>
        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/txt_product_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/product_image"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Product name"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_product_Discription"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/product_image"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txt_product_name"
            android:text="Discription:"
            android:fontFamily="sans-serif"

            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_product_price"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/product_image"
            android:textColor="#FF0404"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_product_Discription"
            android:text="Product Price:"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_product_Category"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/product_image"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txt_product_price"
            android:text="Product Category:"
            android:fontFamily="sans-serif"

            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>